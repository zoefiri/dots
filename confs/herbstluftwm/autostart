#                                                                                                                            #
#   ,##,   ,##,     ####,  ,#####,     #####          ,##,     ,####,          ##,      ,#,  ,##       ####,   ,####,        #
#   ####   ####    ####### ###  ##,  ###' '##      ,#######    ###########,   ,###      ###  ###    ########   ###########,  #
#   #####  ####    ##,     ####  ##  ##' ,##'##   .####''##      '#########   ###'      ###  ###    #####'       '#########  #
#    ###########   #####,  '######'   ##,##  ###  ###,            ###'       ,###       ###,  ###    ##, ,##,     ###'       #
#    ###########   ##'##'   ######,    ##,  ,###  ##########,    ###'        ###'       '###  ###     #######    ###'        #
#     #####  ####  ##       '##,'###,   ######     '#########    ###         ####,       ###,####      ####'     ###         #
#      ####  '###   #####,   ###  '##,   ###           ,#####   ###'          #######,   ########,      ####    ###'         #
#      '##'    ##    #####   '##   '#'               #######'   ##'             ######    #####''#       '##    ##'          #
#                                                                                                                            #
#    ,##        ,##    ,####  ,##.   	                                                                        ,   ,        #
#    ###   ,,   ###   ###### ######  	                                                          ,', ,', ,', ,' ',';        #
#    ###  ,##   ###  ,##' #### '###  	                                                        ,'. ,'`,,', ,', ,'.,'        #
#   ,###  ###   ###  ###  ###   ###	                                                          ,',','',,'  ,'. ,'`,'          #
#   ###   ###  ###'  ##' ,###  ###                                                           ',`,,',,' `,' ,,'','   '        #
#   ###   ####,###   ##  ###  ###                                                             ,'',,' ',' `,',,'|  ,          #
#   #######'######   '#  ##'  '##  	                                                           ',', ,', ,',,'|'|             #
