[colors]
background = ${xrdb:color0:#000000}
foreground = ${xrdb:color12:#222}
foreground-alt = ${xrdb:color10:#222}
primary = ${xrdb:color12:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/custom]
;monitor = ${env:MONITOR:HDMI-1}
