[module/bat]
type = custom/script
exec = /home/zoe/proj/shell/bat/polybat
tail = true
interval = .5
format =  "%{T2}%{T4}<label>"

format-background = ${colors.background}
format-foreground = ${colors.gold}
format-padding = 4
format-prefix-foreground = ${colors.foreground-alt}

[module/mpcstat]
type = custom/script
exec = /home/zoe/PATHcustom/mpcstat
tail = true
interval = 3

format-background = ${colors.green}
format-foreground = ${colors.background}
format-padding = 4
format-prefix-foreground = ${colors.foreground-alt}

[module/mpd]
type = internal/mpd
format-online = "%{T2}<label-song>  %{T2}<icon-prev> %{T2}<toggle> %{T2}<icon-next>   "

port = 6600

icon-prev = <<
icon-stop =
icon-play = x
icon-pause = >
icon-next = >>
format-background = ${colors.gold}

label-song-maxlen = 43
label-song-ellipsis = true

[module/date]
type = internal/date
interval = 1

date = "%{T2}%m//%d%{T4}îˆ¥  "
date-alt = " %Y-%m-%d"

time = "%{T2}  %H\\%M\\%S%{T4}î€– "     
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.background}

